{
  "compilerOptions": {
    "target": "es5",
    "allowJs": false,
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
