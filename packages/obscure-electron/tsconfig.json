{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": false,
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./src/**/*.spec.tsx", "./src/**/*.spec.ts", "node_modules"],
  "include": ["./src/**/*"]
}
