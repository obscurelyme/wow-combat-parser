{
  "compilerOptions": {
    "target": "es6",
    "allowJs": false,
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "build",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./electron/**/*", "./globalTypes/**/*"]
}
